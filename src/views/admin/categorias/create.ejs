<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      href="../multimedia/branding/isotype.svg"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Create</title>
  </head>

  <body>
    <!-- HEADER -->
    <%- include("../../partials/admin/header-admin.ejs") %>

    <section class="admin">
      <form
        class="form-create"
        action="create"
        method="post"
      >
        <h2 class="title-create">CREAR NUEVA CATEGORIA</h2>
        <% if (typeof errors != 'undefined') { %>
          <ul>
            <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
            <% }) %>
          </ul>
          <% } %>
          <!-- CATEGORIAS -->
          <label for="categoria"
            >Categoria:
            <input
            type="text"
              name="category_name"
              id="categoria"
              class="select-categoria"
              value="<%= typeof values != 'undefined' ? values.category_name : ''%>"
            >
            </label
          >
          <label for="category_description">
            Descripci√≥n:
            <input type="text" name="category_description" id="category_description" class="select-categoria" value="<%= typeof values != 'undefined' ? values.category_description : '' %>">
        </label>     

        <div class="botones">
          <button type="submit">Agreagar categoria</button>
          <button type="reset">Limpiar</button>
        </div>
      </form>
    </section>

    <!-- FOOTER -->
    <%- include("../../partials/admin/footer-admin.ejs") %>

    <script src="../js/admin.js"></script>
  </body>
</html>
