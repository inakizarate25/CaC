<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="../multimedia/branding/isotype.svg" type="image/x-icon">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Create</title>
</head>

<body>
    <!-- HEADER -->
    <%- include("../partials/admin/header-admin.ejs") %>

        <section class="admin">
            <form class="form-create" action="create" method="post" enctype="multipart/form-data">

                <h2 class="title-create">CREAR NUEVO ITEM</h2>
                <div class="div-form">
                    <!-- CATEGORIAS -->
                    <label for="categoria">Categoria: <select name="categoria" id="categoria" placeholder="CATEGORIA"
                            class="select-categoria"></select></label>

                    <!-- LICENCIAS -->
                    <label for="licencia">Licencia: <select name="licencia" id="licencia" placeholder="LICENCIA"
                            class="select-licencia"></select></label>

                </div>
                <div class="div-form">
                    <!-- NOMBRES -->
                    <label for="nombre">Nombre del producto:</label>
                    <input type="text" placeholder="NOMBRE DEL PRODUCTO" id="nombre" name="nombre"
                        value="<%= typeof values != 'undefined' ? values.nombre : ''%>">
                </div>
                <!-- DESC -->
                <textarea name="descripcion" id="descripcion" cols="30" rows="10"
                    placeholder="Descripcion del producto"></textarea>

                <div class="div-form2">
                    <!-- SKU -->
                    <label for="sku">SKU: <input type="text" id="sku" placeholder="SKU" class="input-sku"
                            name="sku" /></label>

                    <!-- STOCK -->
                    <label for="stock">Stock: <input type="text" id="stock" placeholder="STOCK" class="input-stock"
                            name="stock" /></label>

                    <!-- PRECIO -->
                    <label for="precio">Precio: <input type="number" id="precio" placeholder="PRECIO"
                            class="input-precio" name="precio" /></label>

                    <!-- DESCUENTO -->
                    <label for="descuento">Descuento: <input type="text" id="descuento" placeholder="DESCUENTO"
                            class="input-descuento" /></label>

                    <!-- CUOTAS -->
                    <label for="cuotas">Cuotas: <select name="cuotas" id="cuotas"></select></label>

                </div>
                <!-- imgs -->
                <div class="imgs">

                    <label for="imagenes">Imagenes:</label>
                    <input type="file" id="imagen" placeholder="Elegir archivox" name="imagen" accept="image/*" />



                </div>
                <div class="botones">
                    <button type="submit">Agreagr producto</button>
                    <button type="reset">Limpiar</button>
                </div>
            </form>


            <% if (typeof errors !="undefined" ) { %>
                <ul class="errors">
                    <p class="title-errors">Errores</p>
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
        </section>

        <!-- FOOTER -->
        <%- include("../partials/admin/footer-admin.ejs") %>

            <script src="../js/admin.js"></script>
</body>

</html>